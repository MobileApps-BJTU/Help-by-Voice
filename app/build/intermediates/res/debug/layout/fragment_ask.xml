<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kim.help_by_voice.fragment.AskFragment">

    <Button
        android:id="@+id/btn_to_dialect"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btn_song"
        android:layout_marginLeft="50dp"
        android:background="@drawable/ic_buttun_bg"
        android:text="@string/btn_mandarin_to_dialect"
        android:textColor="#fff"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btn_to_Mandarin"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="116dp"
        android:background="@drawable/ic_buttun_bg"
        android:text="@string/btn_dialect_to_mandarin"
        android:textColor="#fff"
        android:textSize="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_song"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btn_to_Mandarin"
        android:layout_marginRight="50dp"
        android:layout_marginTop="61dp"
        android:background="@drawable/ic_buttun_bg"
        android:text="@string/btn_song_to_mandarin"
        android:textColor="#fff"
        android:textSize="15dp" />
</RelativeLayout>
